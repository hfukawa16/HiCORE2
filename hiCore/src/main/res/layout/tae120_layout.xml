<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5dp">

	<LinearLayout android:layout_height="wrap_content"
		android:padding="5dp" android:background="@drawable/dotted_rectangle"
		android:orientation="vertical" android:layout_width="match_parent">
		<TextView android:id="@+id/TAE120_InfoMessage"
			android:layout_height="wrap_content" android:text="@string/TAE120_Message"
			android:layout_width="match_parent"></TextView>
		<LinearLayout android:layout_width="match_parent"
			android:id="@+id/linearLayout1" android:orientation="horizontal"
			android:layout_height="wrap_content" android:padding="1dp">
			<Button android:id="@+id/PrevDisplayBtn"  android:layout_width="wrap_content" android:onClick="PrevDisplayOnClick"
				android:layout_height="wrap_content" android:text="@string/TAE120_PrevDisplay"></Button>
			<Spinner android:layout_width="wrap_content" android:id="@+id/TAE120_spinner"
				android:layout_height="wrap_content" android:layout_weight="1"></Spinner>
			<Button android:id="@+id/NextDisplayBtn" android:layout_width="wrap_content"
				android:onClick="NextDisplayOnClick" android:layout_height="wrap_content"
				android:text="@string/TAE120_NextDisplay"></Button>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/TAE120_DetailLinear1"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:paddingTop="5dp" android:layout_width="match_parent">
	</LinearLayout>


</LinearLayout>
