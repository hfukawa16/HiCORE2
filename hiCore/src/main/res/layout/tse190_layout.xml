<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="5dp">

	<LinearLayout android:layout_height="wrap_content"
		android:padding="5dp" android:background="@drawable/dotted_rectangle"
		android:orientation="vertical" android:layout_width="match_parent">
		<TextView android:id="@+id/textView1" android:layout_height="wrap_content"
			android:text="@string/TSE190_Message" android:layout_width="match_parent"></TextView>
	</LinearLayout>
	<ScrollView android:id="@+id/scrollView1"
		android:layout_height="wrap_content" android:layout_width="match_parent">
		<LinearLayout android:id="@+id/linearLayout3"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout android:paddingTop="10dp" android:id="@+id/linearLayout2"
				android:layout_height="wrap_content" android:layout_width="match_parent"
				android:orientation="vertical">
				<EditText android:password="true" android:maxLength="30"
					android:id="@+id/OldPassWord" android:layout_height="wrap_content"
					android:singleLine="true" android:hint="@string/TSE190_OldPasswordHint"
					android:layout_width="match_parent"></EditText>
				<EditText android:password="true" android:maxLength="30"
					android:id="@+id/NewPassWord1" android:layout_height="wrap_content"
					android:singleLine="true" android:hint="@string/TSE190_NewPassWordHint1"
					android:layout_width="match_parent"></EditText>
				<EditText android:password="true" android:maxLength="30"
					android:id="@+id/NewPassWord2" android:layout_height="wrap_content"
					android:singleLine="true" android:hint="@string/TSE190_NewPassWordHint2"
					android:layout_width="match_parent"></EditText>
			</LinearLayout>
			<LinearLayout android:padding="20dp" android:id="@+id/linearLayout1"
				android:layout_height="wrap_content" android:layout_width="match_parent"
				android:orientation="vertical">
				<Button android:text="@string/TSE190_OK"
					android:layout_height="wrap_content" android:padding="20dp"
					android:id="@+id/TSE190_OK_button" android:layout_width="fill_parent"></Button>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>


</LinearLayout>
