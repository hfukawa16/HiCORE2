<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- ボタンが押されている -->
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:angle="270" android:startColor="#8CFFB1"
						android:endColor="#00DB47" android:type="linear" />
					<corners android:radius="4dip" />
					<stroke android:width="2dip" android:color="#000000" />
				</shape>
			</item>
		</layer-list>
	</item>

	<!-- ボタンが押されていない -->
	<item android:state_pressed="false">
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:angle="270" android:startColor="#EFEFEF"
						android:endColor="#FFFFEF" android:type="linear" />
					<stroke android:width="0.1dip" android:color="#CCCCCC" />
				</shape>
			</item>
		</layer-list>
	</item>


</selector>