<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


	<!-- ボタンが押されていない -->
	<item android:state_pressed="false" >
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<gradient android:angle="270" android:startColor="#DDDDDD"
						android:endColor="#000000" android:type="linear" />
				</shape>
			</item>
		</layer-list>
	</item>

	<!-- ボタンが押されている -->
	<item android:state_pressed="true" >
		<layer-list>
			<item>
				<shape xmlns:android="http://schemas.android.com/apk/res/android"
					android:shape="rectangle">
					<gradient android:angle="270" android:startColor="#294275"
						android:endColor="#82A0F4" android:type="linear" />
					<corners android:radius="4dip" />
					<stroke android:width="2dip" android:color="#CC6600" />
				</shape>
			</item>
		</layer-list>
	</item>


</selector>